@using StudentManagement.Models
@{
    ViewBag.Title = "EditTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Giangvien giangvien = (Giangvien)ViewData["giangvien"];
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title">Cập Nhật Giảng Viên</h3>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Teachers", "StudentManagement")">Giảng Viên</a></li>
                    <li class="breadcrumb-item active">Cập Nhật Giảng Viên</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form action="@Url.Action("EditTeacher", "StudentManagement", new { id = giangvien.id })" method="post">
                        <div class="row">
                            <div class="col-12">
                                <h5 class="form-title"><span>Thông Tin Giảng Viên</span></h5>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Họ Và Tên</label>
                                    <input name="name" type="text" class="form-control" value="@giangvien.user.name">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input name="email" type="text" class="form-control" value="@giangvien.user.email">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Mã Số Giảng Viên</label>
                                    <input name="msgv" type="text" class="form-control" value="@giangvien.msgv">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Giới Tính</label>
                                    <select name="gioitinh" class="form-control">
                                        <option @(giangvien.gioitinh == "Nữ" ? "selected" : "")>Nữ</option>
                                        <option @(giangvien.gioitinh == "Nam" ? "selected" : "")>Nam</option>
                                        <option @(giangvien.gioitinh == "Khác" ? "selected" : "")>Khác</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Ngày Sinh</label>
                                    <div>
                                        <input name="ngaysinh" type="text" class="form-control" value="@giangvien.ngaysinh">
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Lớp Chủ Nhiệm</label>
                                    <input name="lop" type="text" class="form-control" value="@giangvien.lop">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Tôn Giáo</label>
                                    <input name="tongiao" type="text" class="form-control" value="@giangvien.tongiao">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Số Điện Thoại</label>
                                    <input name="phone" type="text" class="form-control" value="@giangvien.phone">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Khoa</label>
                                    <input name="khoa" type="text" class="form-control" value="@giangvien.khoa">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Ngành</label>
                                    <input name="nganh" type="text" class="form-control" value="@giangvien.nganh">
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="form-group">
                                    <label>Ảnh Đại Diện</label>
                                    <input name="avatar" type="file" class="form-control">
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Cập Nhật</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>